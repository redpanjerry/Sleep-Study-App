<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="3dp"/>

            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
            android:startColor="#FFFFFF" /> <!-- your_primary_color -->
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="3dp" />

                <gradient
                    android:angle="90"
                    android:endColor="#3E8469"
                    android:startColor="#3E8469" /> <!-- your_secondary_color -->
            </shape>
        </clip>
    </item>

</layer-list>